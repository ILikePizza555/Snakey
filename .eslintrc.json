{
    "env": {
        "es6": true,
        "node": true
    },
    "extends": ["eslint:recommended", "google"],
    "plugins": [
        "jsdoc"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "brace-style" : ["error", "1tbs", {"allowSingleLine": true}],
        "max-len": [1, { "code": 120 }]
    }
}